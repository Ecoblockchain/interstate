{
	"manifest_version": 2,

	"name": "Interstate Test Extension",
	"description": "This extension helps test Interstate.",
	"version": "1.0",
	"background": {
		"scripts": ["background.js"]
	},

	"content_scripts": [
		{
			"matches": ["http://localhost:8000/test/unit_tests/unit_tests.ejs.html*"],
			"js": ["content_script.js"],
			"run_at": "document_start"
		}
	],

	"permissions": [
		"tabs",
		"http://localhost:8000/test/unit_tests/unit_tests.ejs.html*",
		"debugger"
	]
}
